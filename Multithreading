#include <stdio.h>
#include <pthread.h>
#include <unistd.h>

// Function executed by first thread
void* thread1_function(void* arg) {
    int n = *(int*)arg;
    for(int i = 1; i <= n; i++) {
        printf("Thread 1: %d\n", i);
        sleep(1); // Pause for 1 second
    }
    pthread_exit(NULL);
}

// Function executed by second thread
void* thread2_function(void* arg) {
    int n = *(int*)arg;
    for(int i = 1; i <= n; i++) {
        printf("Thread 2: %d\n", i);
        sleep(1); // Pause for 1 second
    }
    pthread_exit(NULL);
}

int main() {
    pthread_t thread1, thread2;
    int n;

    // Input from user
    printf("Enter a number till which threads should count: ");
    scanf("%d", &n);

    // Create threads
    pthread_create(&thread1, NULL, thread1_function, (void*)&n);
    pthread_create(&thread2, NULL, thread2_function, (void*)&n);

    // Wait for threads to finish
    pthread_join(thread1, NULL);
    pthread_join(thread2, NULL);

    printf("Both threads have finished execution.\n");

    return 0;
}
