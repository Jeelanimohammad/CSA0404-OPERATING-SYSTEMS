#include <stdio.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd[2];
    char msg[50];

    pipe(fd);              // create pipe

    if (fork() == 0) {     // Child process
        close(fd[1]);      // close write end
        read(fd[0], msg, sizeof(msg));
        printf("Child received: %s\n", msg);
    } 
    else {                 // Parent process
        close(fd[0]);      // close read end
        printf("Enter message: ");
        scanf("%s", msg);
        write(fd[1], msg, strlen(msg) + 1);
    }

    return 0;
}
