#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i, head, size, dir, seek = 0;
    int rq[20], temp;

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &rq[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    printf("Enter disk size: ");
    scanf("%d", &size);

    printf("Enter direction (1 = right, 0 = left): ");
    scanf("%d", &dir);

    rq[n] = head;
    rq[n+1] = (dir == 1) ? size - 1 : 0;
    n += 2;

    for(i = 0; i < n; i++)
        for(int j = i + 1; j < n; j++)
            if(rq[i] > rq[j]) {
                temp = rq[i];
                rq[i] = rq[j];
                rq[j] = temp;
            }

    for(i = 0; i < n; i++)
        if(rq[i] == head)
            break;

    printf("Seek Sequence:\n");

    if(dir == 1) {
        for(int j = i; j < n - 1; j++) {
            seek += abs(rq[j] - rq[j + 1]);
            printf("%d -> ", rq[j]);
        }
        for(int j = i - 1; j >= 0; j--) {
            seek += abs(rq[j + 1] - rq[j]);
            printf("%d -> ", rq[j]);
        }
    } else {
        for(int j = i; j > 0; j--) {
            seek += abs(rq[j] - rq[j - 1]);
            printf("%d -> ", rq[j]);
        }
        for(int j = i + 1; j < n; j++) {
            seek += abs(rq[j] - rq[j - 1]);
            printf("%d -> ", rq[j]);
        }
    }

    printf("\nTotal Seek Time = %d\n", seek);
    return 0;
}
