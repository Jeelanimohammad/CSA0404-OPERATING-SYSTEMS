#include <stdio.h>
#include <string.h>

int main() {
    FILE *fp;
    char line[200], pattern[50];

    printf("Enter pattern to search: ");
    scanf("%s", pattern);

    fp = fopen("sample.txt", "r");
    if (fp == NULL) {
        printf("File not found\n");
        return 1;
    }

    printf("Matching lines:\n");

    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("%s", line);
        }
    }

    fclose(fp);
    return 0;
}
