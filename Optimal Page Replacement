#include <stdio.h>

int main() {
    int n, frames, i, j, k, flag, pos, farthest, pageFaults = 0;

    // User input for number of pages
    printf("Enter number of pages: ");
    scanf("%d", &n);
    int pages[n];

    printf("Enter the page reference sequence: ");
    for(i = 0; i < n; i++)
        scanf("%d", &pages[i]);

    // User input for number of frames
    printf("Enter number of frames: ");
    scanf("%d", &frames);
    int frame[frames];

    // Initialize frames
    for(i = 0; i < frames; i++)
        frame[i] = -1;

    printf("\nPage\tFrames\n");
    for(i = 0; i < n; i++) {
        flag = 0;

        // Check if page is already in frame
        for(j = 0; j < frames; j++) {
            if(frame[j] == pages[i]) {
                flag = 1;
                break;
            }
        }

        if(flag == 0) {
            pageFaults++;

            // Check for empty frame
            for(j = 0; j < frames; j++) {
                if(frame[j] == -1) {
                    frame[j] = pages[i];
                    flag = 1;
                    break;
                }
            }

            // If no empty frame, replace the page which will not be used for longest time
            if(flag == 0) {
                farthest = -1;
                pos = -1;
                for(j = 0; j < frames; j++) {
                    int found = 0;
                    for(k = i+1; k < n; k++) {
                        if(frame[j] == pages[k]) {
                            if(k > farthest) {
                                farthest = k;
                                pos = j;
                            }
                            found = 1;
                            break;
                        }
                    }
                    if(found == 0) { // If page not found in future, replace it
                        pos = j;
                        break;
                    }
                }
                frame[pos] = pages[i];
            }
        }

        // Display current frame status
        printf("%d\t", pages[i]);
        for(j = 0; j < frames; j++) {
            if(frame[j] != -1)
                printf("%d ", frame[j]);
            else
                printf("- ");
        }
        printf("\n");
    }

    printf("\nTotal Page Faults: %d\n", pageFaults);
    return 0;
}
