#include <stdio.h>
#include <dirent.h>

int main() {
    DIR *dp;
    struct dirent *entry;

    dp = opendir(".");
    if (dp == NULL) {
        printf("Cannot open directory\n");
        return 1;
    }

    printf("Files in current directory:\n");

    while ((entry = readdir(dp)) != NULL) {
        printf("%s\n", entry->d_name);
    }

    closedir(dp);
    return 0;
}
