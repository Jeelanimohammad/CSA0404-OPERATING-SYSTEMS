#include <stdio.h>

int main() {
    int frames, pages, i, j = 0, faults = 0;
    int ref[20], frame[10], k, found;

    printf("Enter number of frames: ");
    scanf("%d", &frames);

    printf("Enter number of pages: ");
    scanf("%d", &pages);

    printf("Enter page reference string:\n");
    for(i = 0; i < pages; i++)
        scanf("%d", &ref[i]);

    for(i = 0; i < frames; i++)
        frame[i] = -1;

    printf("\nPage\tFrames\t\tFault\n");

    for(i = 0; i < pages; i++) {
        found = 0;

        for(k = 0; k < frames; k++) {
            if(frame[k] == ref[i]) {
                found = 1;
                break;
            }
        }

        if(!found) {
            frame[j] = ref[i];
            j = (j + 1) % frames;
            faults++;
        }

        printf("%d\t", ref[i]);
        for(k = 0; k < frames; k++) {
            if(frame[k] != -1)
                printf("%d ", frame[k]);
            else
                printf("- ");
        }

        if(!found)
            printf("\tYes\n");
        else
            printf("\tNo\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);
    return 0;
}
