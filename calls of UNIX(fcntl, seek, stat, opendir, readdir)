#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>
#include <sys/stat.h>
#include <dirent.h>

int main() {
    int fd, flags;
    char buffer[50];
    struct stat fileStat;
    DIR *dir;
    struct dirent *entry;

    // open file
    fd = open("test.txt", O_CREAT | O_RDWR | O_TRUNC, 0644);
    write(fd, "UNIX_IO", 7);

    // fcntl - get file status flags
    flags = fcntl(fd, F_GETFL);
    printf("File flags value: %d\n", flags);

    // lseek - move file pointer to beginning
    lseek(fd, 0, SEEK_SET);
    read(fd, buffer, 7);
    buffer[7] = '\0';
    printf("Data read using lseek: %s\n", buffer);
    close(fd);

    // stat - get file information
    stat("test.txt", &fileStat);
    printf("File size: %ld bytes\n", fileStat.st_size);

    // opendir and readdir
    dir = opendir(".");
    printf("Directory contents:\n");
    while((entry = readdir(dir)) != NULL) {
        printf("%s\n", entry->d_name);
    }
    closedir(dir);

    return 0;
}
